{
  "name": "sonar-platform",
  "version": "1.0.0",
  "type": "module",
  "description": "Sonar Platform - Whale wallet intelligence system for Solana",
  "main": "server.ts",
  "scripts": {
    "dev": "bun --watch run server.ts",
    "start": "bun run server.ts",
    "build": "bun build server.ts --outdir dist --target bun",
    "build:node": "tsc",
    "start:node": "node dist/server.js",
    "deploy": "wrangler deploy",
    "dev:worker": "wrangler dev",
    "test": "cp .env.test .env && bun test",
    "test:watch": "cp .env.test .env && bun test --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@neondatabase/serverless": "^1.0.1",
    "@solana/web3.js": "^1.87.0",
    "hono": "^4.0.0",
    "helius-sdk": "^1.2.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/bun": "latest",
    "@types/ws": "^8.5.10",
    "bun-types": "^0.1.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "author": "Eric"
}