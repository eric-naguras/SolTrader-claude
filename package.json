{
  "name": "project-sonar",
  "version": "1.0.0",
  "description": "Solana Whale Wallet Intelligence Platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "db:migrate": "npm run migrate -w @sonar/database",
    "whale-watcher": "npm run start -w @sonar/whale-watcher",
    "notifier": "npm run start -w @sonar/notifier",
    "paper-trader": "npm run start -w @sonar/paper-trader",
    "cli": "npm run start -w @sonar/cli",
    "api": "npm run start -w @sonar/api"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}